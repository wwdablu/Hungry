<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soumya.wwdablu.hungry">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".HungryApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.GenericSearchResultActivity"></activity>
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CollectionDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar.TransparentNavi" />
        <activity
            android:name=".activity.PhotoViewerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RestaurantDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar.TransparentNavi" />
        <activity
            android:name=".activity.CollectionsActivity"
            android:theme="@style/AppTheme.NoActionBar.TransparentNavi" />
        <activity
            android:name=".activity.DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LocationAccess"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>